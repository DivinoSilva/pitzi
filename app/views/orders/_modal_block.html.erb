
<div class="modal" id="order-form">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-header ">
        <button type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <%= form_tag orders_path, method: :post, class: 'add-order-form form-horizontal' do %>
         
          <button class="btn btn-sm btn-primary btn-add-order pull-right" type="button" id="btn-add-item" >Salvar</i></button>
        <% end %>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
</div>
<%= render 'order_behavior' %>