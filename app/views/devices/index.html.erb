<div class="content content-boxed">
  <div class="block">
    <div class="block-header bg-gray-lighter">
      <div class="col-sm-12">
        <div class="col-sm-6">
          <h3 class="block-title ">Aparelhos</h3>
        </div>
        <div class="col-sm-6">
          <button class="btn btn-sm btn-primary pull-right" data-toggle="modal" data-target="#device-form" type="button"><i class="fa fa-plus"></i></button>
        </div>
      </div>
    </div>

    <div class="block-content">
      <table class="table table-borderless table-striped table-vcenter">
        <thead>
          <tr>
            <th class="text-center">Id</th>
            <th class="text-center">Cliente</th>
            <th class="text-center">Fabricante</th>
            <th class="text-center">Modelo</th>
            <th class="text-center">IMEI</th>
          </tr>
        </thead>
        <tbody>
          <% @devices.each do |device| %>
            <tr>
              <td class="text-center"> <%= device.id %> </td>
              <td class="text-center"> <%= device.customer.name.capitalize %> </td>
              <td class="text-center"> <%= device.manufacturer %> </td>
              <td class="text-center"> <%= device.model %> </td>
              <td class="text-center"> <%= device.imei %> </td>
            </tr>
          <% end if @devices %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= render 'modal_block' %>